{
  "manifest_version": 3,
  "name": "TruthLens",
  "version": "1.0",
  "description": "Verify Twitter account authenticity in real-time",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["tabs", "activeTab", "scripting"],
  "host_permissions": ["https://twitter.com/*"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
